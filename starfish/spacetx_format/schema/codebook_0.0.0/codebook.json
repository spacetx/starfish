{
  "$id": "https://github.com/spacetx/starfish/spacetx_format/schema/codebook_0.0.0/codebook.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "description": "Codebook for mapping image features to target molecules.",
  "required": [
    "version",
    "mappings"
  ],
  "additionalProperties": false,
  "properties": {
    "version": {
      "$ref": "../version.json"
    },
    "mappings": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "codeword",
          "target"
        ],
        "properties": {
          "codeword": {
            "$ref": "codeword.json"
          },
          "target": {
            "type": "string",
            "description": "the target molecule (often gene or protein) identified by a codeword",
            "examples": [
              "ACTB",
              "CD4"
            ]
          }
        }
      }
    }
  }
}
